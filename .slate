# hyperkey alias
alias hyper ctrl;shift;alt;cmd

# Size aliases
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY

alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY

alias uphalf move screenOriginX;screenOriginY screenSizeX;screenSizeY/2
alias downhalf move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY/2

# Grid
bind g:${hyper} grid padding:5 0:10,6 1:10,6

# Move aliases
bind return:${hyper} ${full}

bind left:${hyper} ${lefthalf}
bind right:${hyper} ${righthalf}

bind up:${hyper} ${uphalf}
bind down:${hyper} ${downhalf}

# Applications
bind s:${hyper} focus 'Spotify'
bind t:${hyper} focus 'iTerm2'
bind a:${hyper} focus 'Atom'
bind c:${hyper} focus 'Google Chrome'
bind m:${hyper} focus 'Mail'
bind f:${hyper} focus 'Finder'
bind x:${hyper} focus 'Xcode'

# Throw windows to other monitors
bind 1:${hyper} throw 0 resize
bind 2:${hyper} throw 1 resize

